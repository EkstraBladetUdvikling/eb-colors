{
  "name": "@ekstra-bladet/eb-colors",
  "files": [
    "dist/",
    "example/"
  ],
  "version": "2.3.0",
  "description": "EB colors for SCSS and CSS",
  "scripts": {
    "build": "npm run build-css-vars && npm run build-css-classes && npm run convert-rgb && npm run build-ts-vars",
    "build-css-vars": "sass \"src/all-css-vars.scss\" \"dist/eb-colors-css-vars.css\" --no-source-map",
    "build-css-classes": "sass \"src/all-with-classes.scss\" \"dist/eb-colors-classes.css\" --no-source-map",
    "build-ts-vars": "npm run parse-snippets && node handleTS",
    "example": "npm run parse-snippets && node createExample",
    "prettier": "prettier \"./src/**/*.scss\" --write",
    "convert-rgb": "yarn postcss ./dist/eb-colors-css-vars.css --config ./postcss.config.js -o ./temp/eb-colors-vars-rgb.css",
    "postconvert-rgb": "node convertrgb",
    "parse-snippets": "cssparser \"./dist/eb-colors-css-vars.css\" -o \"./temp/eb-colors-css-vars.json\" && cssparser \"./dist/eb-colors-vars-rgb.css\" -o \"./temp/eb-colors-vars-rgb.json\" && cssparser \"./dist/eb-colors-classes.css\" -o \"./temp/eb-colors-classes.json\"",
    "build-vscode-snippets": "npm run parse-snippets && node create-vscode-snippets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebudvikling/eb-colors.git"
  },
  "author": "Ekstra Bladet",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ebudvikling/eb-colors/issues"
  },
  "homepage": "https://github.com/ebudvikling/eb-colors#readme",
  "devDependencies": {
    "cssparser": "^0.9.4",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "postcss-rgb-plz": "^2.0.2"
  }
}
