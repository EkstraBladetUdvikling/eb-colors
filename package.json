{
  "name": "@ekstra-bladet/eb-colors",
  "version": "1.0.5",
  "description": "EB colors for SCSS and CSS",
  "scripts": {
    "dist": "npm run build",
    "build": "npm run lint-scss && npm run build-css-vars && npm run build-css-classes",
    "build-css-vars": "sass \"src/all-css-vars.scss\" \"dist/eb-colors-css-vars.css\" --sourcemap=none",
    "build-css-classes": "sass \"src/all-with-classes.scss\" \"dist/eb-colors-classes.css\" --sourcemap=none",
    "lint-scss": "stylelint \"src/**/*.scss\" --syntax scss",
    "test": "sass \"example/test.scss\" \"example/test.css\" --sourcemap=none"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebudvikling/eb-colors.git"
  },
  "author": "Ekstra Bladet",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ebudvikling/eb-colors/issues"
  },
  "homepage": "https://github.com/ebudvikling/eb-colors#readme",
  "devDependencies": {
    "stylelint": "^7.13.0",
    "stylelint-config-eb": "^1.0.14",
    "stylelint-scss": "^1.5.2"
  },
  "stylelint": {
    "extends": "stylelint-config-eb"
  }
}
